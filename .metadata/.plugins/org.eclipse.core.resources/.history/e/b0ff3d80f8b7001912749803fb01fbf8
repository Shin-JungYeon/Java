package programmers;

public class Exam2 {
	public static void main(String[] args) {
		Solution s = new Solution();
		String arrangement = "()(((()())(())()))(())";
		System.out.println(s.solution(arrangement));
	}
}

class Solution {
	public int solution(String arrangement) {
		int answer = 0;
		String[] arr = arrangement.split("()");
		for (int i = 0; i < arr.length; i++) {
			if (arr.length - 1 > i) {
				if (arr[i].equals("(") && arr[i].equals(arr[i + 1])) { // 쇠막대기 갯수.
					System.out.println("쇠막대기 시작 : "+i);  // 쇠막대기 시작 인덱스
				} else if (arr[i].equals(")") && arr[i].equals(arr[i + 1])) {
					System.out.println("쇠막대기 끝 : "+(i+1));  // 쇠막대기 끝 인덱스
				} else if (arr[i].equals("(") && !arr[i].equals(arr[i + 1])) {
					System.out.println("레이저시작 : "+i);
				}
			}
		}
		return answer;
	}
}
